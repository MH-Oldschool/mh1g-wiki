{{> head }}

<section id="melee-weapons" class="weapons-with-attributes">
	<article>
		<h2>Melee Weapons</h2>
	</article>

	<article class="filters">
		<div class="filter-checks">
			<div class="filter-column">
				<h3 title="highlight weapons with a certain element/status">Element/Status:</h3>
				<div>
					<input id="weapon-element-fire" name="weapon-element-status" type="checkbox" value="highlight-fire"/>
					<label for="weapon-element-fire" class="element-res-label" title="Fire">
						<img class="attribute-icon" src="../images/attributes/fire.png" alt="Fire"/>
					</label>
					<input id="weapon-element-water" name="weapon-element-status" type="checkbox" value="highlight-water"/>
					<label for="weapon-element-water" class="element-res-label" title="Water">
						<img class="attribute-icon" src="../images/attributes/water.png" alt="Water"/>
					</label>
					<input id="weapon-element-thunder" name="weapon-element-status" type="checkbox" value="highlight-thunder"/>
					<label for="weapon-element-thunder" class="element-res-label" title="Thunder">
						<img class="attribute-icon" src="../images/attributes/thunder.png" alt="Thunder"/>
					</label>
					<input id="weapon-element-ice" name="weapon-element-status" type="checkbox" value="highlight-ice"/>
					<label for="weapon-element-ice" class="element-res-label" title="Ice">
						<img class="attribute-icon" src="../images/attributes/ice.png" alt="Ice"/>
					</label>
					<input id="weapon-element-dragon" name="weapon-element-status" type="checkbox" value="highlight-dragon"/>
					<label for="weapon-element-dragon" class="element-res-label" title="Dragon">
						<img class="attribute-icon" src="../images/attributes/dragon.png" alt="Dragon"/>
					</label>
				</div>
				<div>
					<input id="weapon-status-poison" name="weapon-element-status" type="checkbox" value="highlight-poison"/>
					<label for="weapon-status-poison" class="element-res-label" title="Poison">
						<img class="attribute-icon" src="../images/attributes/poison.png" alt="Poison"/>
					</label>
					<input id="weapon-status-paralysis" name="weapon-element-status" type="checkbox" value="highlight-paralysis"/>
					<label for="weapon-status-paralysis" class="element-res-label" title="Paralysis">
						<img class="attribute-icon" src="../images/attributes/paralysis.png" alt="Paralysis"/>
					</label>
					<input id="weapon-status-sleep" name="weapon-element-status" type="checkbox" value="highlight-sleep"/>
					<label for="weapon-status-sleep" class="element-res-label" title="Sleep">
						<img class="attribute-icon" src="../images/attributes/sleep.png" alt="Sleep"/>
					</label>
					<input id="weapon-status-element-all" type="checkbox" value="highlight-all" checked/>
					<label for="weapon-status-element-all" class="element-res-label">All</label>
				</div>
			</div>

			<div class="filter-column" style="display:none">
				<div id="rank-filters" class="range-container">
					<label for="rank-filter">Rank:</label>
					<input id="rank-filter" type="range" min="0" max="2" step="1" value="2"/>
					<div class="range-labels-container">
						<span class="range-label highlighted">Low</span>|<span class="range-label highlighted">High</span>|<span class="g-rank-label range-label highlighted">G</span>
					</div>
				</div>
			</div>

			<div class="filter-column">
				<label for="search">Search: </label>
				<input id="search" type="text" placeholder="Weapon"/>
			</div>
		</div>

		<div class="filter-checks">
			<input id="toggle-everything" type="checkbox"/>
			<label for="toggle-everything">Show Everything</label>
		</div>
	</article>

	{{#blademasterWeapons}}
		<details id="great-longswords" class="weapon-class-container">
			<summary>
				<h2>{{&weaponClassTitle}}</h2>
			</summary>

			{{#groups}}
				<details id="{{groupId}}" class="weapon-group-container {{#highRank}}high-rank {{/highRank}}{{#gRank}}g-rank {{/gRank}}{{groupClass}}">
					<summary>
						<h3>
							{{group}}
							{{#from}} (from <a href="#{{fromId}}" data-target="{{fromId}}">{{from}}</a>){{/from}}
							{{#toggleAll}}
								<button class="toggle-all-button" data-target="{{groupId}}" title="toggle all">toggle all</button>
