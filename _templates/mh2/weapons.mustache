													{{attributeValue}}
												{{/attribute}}
												{{^attribute}}-{{/attribute}}
											</td>
											<td class="ta-r">{{defense}}{{^defense}}-{{/defense}}</td>
											<td class="sharpness-cell">
												<div class="sharpness-container">
													<img src="images/sharpness/sharpness_{{index}}.gif"/>
												</div>
											</td>
											{{#hasGunlance}}
												<td>
													{{#shellType}}
														{{shellType}} Lv{{shellLevel}}
													{{/shellType}}
												</td>
											{{/hasGunlance}}
											{{#hasHuntingHorn}}
												<td title="{{notes}}">
													{{#noteIcons}}
														<span class="{{.}}-icon note-icon"></span>
													{{/noteIcons}}
												</td>
											{{/hasHuntingHorn}}
											<td class="ta-r">{{#price}}{{price}}z{{/price}}</td>
											{{^other}}
											<td class="expandable" title="click to toggle full list">
												{{#upgrade}}
													{{>material}}
												{{/upgrade}}
											</td>
											{{/other}}
											<td class="expandable" title="click to toggle full list">
												{{#forge}}
													{{>material}}
												{{/forge}}

												{{{acquire}}}

												{{#dev}}
													This weapon is not obtainable by normal means.
												{{/dev}}
											</td>
										{{/weaponLink}}
									</tr>
								{{/weapons}}
							</tbody>
