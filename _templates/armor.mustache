{{> head}}

<details>
	<summary><h2>Headgear</h2></summary>
	<table>
		<thead>
			<tr>
				<tr>
					<th>Name</th>
					<th>Rarity</th>
					<th>Gender</th>
					<th>Defense</th>
					<th colspan="4">Resistances</th>
					<th>Skills</th>
					<th>Price</th>
					<th>Forge Materials</th>
				</tr>
			</tr>
		</thead>
		<tbody>
			{{#helmets}}
				{{> headgear_row}}
			{{/helmets}}
		</tbody>
	</table>
</details>

