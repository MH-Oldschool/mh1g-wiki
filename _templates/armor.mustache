		<thead>
			<tr>
				<tr>
					<th>Name</th>
					<th>Rarity</th>
					<th>Gender</th>
					<th>Class</th>
					<th>Defense</th><th colspan="4">Resistances</th>
					<th>Skills</th>
					<th>Price</th>
					<th>Forge Materials</th>
				</tr>
