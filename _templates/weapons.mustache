					{{#motionValues.greatsword}}
						{{> motion_value_rows }}
					{{/motionValues.greatsword}}
				</tbody>

				<tbody class="motion-values hammer-mvs">
					{{#motionValues.hammer}}
						{{> motion_value_rows }}
					{{/motionValues.hammer}}
