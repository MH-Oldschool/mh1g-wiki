					<label for="weapon-element-dragon" class="element-res-label" title="Dragon">
						<img class="attribute-icon" src="images/attributes/dragon.png" alt="Dragon"/>
					</label>
				</div>
				<div>
					<input id="weapon-status-poison" name="weapon-element-status" type="checkbox" value="highlight-poison" checked/>
					<label for="weapon-status-poison" class="element-res-label" title="Poison">
						<img class="attribute-icon" src="images/attributes/poison.png" alt="Poison"/>
					</label>
					<input id="weapon-status-paralysis" name="weapon-element-status" type="checkbox" value="highlight-paralysis" checked/>
					<label for="weapon-status-paralysis" class="element-res-label" title="Paralysis">
						<img class="attribute-icon" src="images/attributes/paralysis.png" alt="Paralysis"/>
					</label>
					<input id="weapon-status-sleep" name="weapon-element-status" type="checkbox" value="highlight-sleep" checked/>
					<label for="weapon-status-sleep" class="element-res-label" title="Sleep">
						<img class="attribute-icon" src="images/attributes/sleep.png" alt="Sleep"/>
					</label>
					<input id="weapon-status-element-all" type="checkbox" value="highlight-all" checked/>
					<label for="weapon-status-element-all" class="element-res-label">All</label>
				</div>
			</div>

			<div class="filter-column" style="display:none">
				<div id="rank-filters" class="range-container">
					<label for="rank-filter">Rank:</label>
					<input id="rank-filter" type="range" min="0" max="2" step="1" value="2"/>
					<div class="range-labels-container">
						<span class="range-label highlighted">Low</span>|<span class="range-label highlighted">High</span>|<span class="g-rank-label range-label highlighted">G</span>
					</div>
				</div>
			</div>

			<div class="filter-column">
				<label for="search">Search: </label>
				<input id="search" type="text" placeholder="Weapon"/>
			</div>
		</div>

		<div class="filter-checks">
			<input id="toggle-everything" type="checkbox"/>
